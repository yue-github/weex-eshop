  var getBanners = function(me) {
 
    data.utils.fetch(me, {
      method: 'post',
      url: data.utils.getServerBaseUrl() + "webapp/home/banners",
      type:'json'
    }, function(response) {
      if(response.data) {
        var banners = response.data.advertisements;

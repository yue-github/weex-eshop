<style>
  .pd-b20{
    padding-bottom:20px;
    padding-top:80px;
  }
  
  .buttons{
    border-width:1px;
    border-style:solid;
    border-color:#EB5E68;
    width:700px;
    background-color:#FDE314;
    margin-left:25px;
    color:white;
    border-radius:0px;
    height: 100px;
    text-align: center;
    font-size: 36px;
    padding-top: 30px;
  }

  .mg-t-20{
    margin-top:20px;
  }

  .input{
    width:710px;
    height:80px;
    margin-left:20px;
    font-size:36px;
    border-style:solid;
    border-width:1px;
    border-color:#D0D7DF;
    padding-left:20px;
  }

  .row-start{
    margin-top:20px;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
  }

  .code{
    width:470px;
    height:80px;
    margin-left:20px;
    font-size:36px;
    border-style:solid;
    border-width:1px;
    border-color:#D0D7DF;
    padding-left:20px;
  }

  .getCode{
    width:240px;
    height:80;
    background-color:#FDE314;
    font-size:36px;
    padding-top:20px;
    text-align:center;
    color:#ffffff;

  }
</style>

<template>
  <wxc-navpage data-role="none" height="88" background-color="#FDE314" title="找回密码" title-color="white" left-item-title="返回" left-item-color="white">
    <scroller>
      <!-- start: 输入框 -->

      <div class="mg-t-20">
        <input class="input" type="text" value="{{phone}}" oninput="vchange($event, 'phone')" placeholder="手机号">
      </div>

      <div class="row-start">
        <input class="code" type="text" value="{{code}}" oninput="vchange($event, 'code')" placeholder="验证码">
        <text class="getCode" onclick="getCode()" style="padding-top:17px;">{{codeText}}</text>
      </div>
      <!-- end: 输入框 -->

      <!-- start: 下一步 -->
      <div class="pd-b20" onclick="submit()">
        <text class="buttons">下一步</text>
      </div>
       <!-- end: 下一步 -->
    </scroller>
  </wxc-navpage>
  
  
</template>

<script>
 require('weex-components');
 var stream = require('@weex-module/stream');
   var storage = require('@weex-module/storage');
   var modal = require('@weex-module/modal');
var timenum=0;
var timer;
 var data = {
    getPasswordData: {codeToken: ""},
    customerId: "",
    codestate:0,
    codeText:"获取验证码"
  };

  data.utils = require('./js-kit/utils');

 //根据号码和账号找回密码
 var getPassword = function(me) {
    data.utils.fetch(me, {
      method: 'post',
      url: data.utils.getServerBaseUrl() + "webapp/forgetPassword/nextByPhone",
      type:'json',
      body: data.getPasswordData
    }, function(response) {
      console.log(response)
      if(response.data.error == -1) {
        modal.toast({'message': '验证码不正确', 'duration': 2});
      }else if(response.data.error == -2) {
         modal.toast({'message': '账号不存在', 'duration': 2});
      }else if(response.data.error == 0) {
        data.customerId = response.data.data.id;
        me.$openURL(me.utils.getAppBaseUrl(me) + 'forgetPassword2.js?customerId=' + response.data.data.id);
      }
    },function(response){

    });
  };

 module.exports = {
    data: data,
    created: function() {
        this.$on('naviBar.leftItem.click',function(e){
          data.utils.pop(this);
        });
    },
    methods: {
       ready:function(){
                timer = setInterval(
               this.start.bind(this)
                 , 1000)
             },
               start:function(){
              if(timenum>0){
                timenum--;
               data.codeText=timenum+"秒后重发";
                }else{
                data.codeText="获取验证码";
                data.codestate=0;
                } 
          },
          stop:function(){
          if(timenum==0){
          clearInterval(timer)

              }
          },
      submit: function () {
        if(!data.getPasswordData.phone) {
          modal.toast({'message': '手机号码不可为空', 'duration': 2});
          return;
        }
        if(!data.getPasswordData.code) {
          modal.toast({'message': '验证码不能为空', 'duration': 2});
          return;
        }
        getPassword(this);
      },
      vchange: function (e, m) {
      	if(m =="phone"){
          	if(!/^[+-]?\d*\.?\d*$/.test(e.value)){
          	  modal.toast({'message': '手机号码不可为特殊字符'});
          	}
          }
        this.getPasswordData[m] = e.value;
      },
      getCode: function () {
        if(data.codestate==1){
          return false;
        }
        if(!data.getPasswordData.phone){
           modal.toast({'message': '手机号码不可为空', 'duration': 2});
          return false;
        }
        data.utils.fetch(this, {
          method: 'post',
          url: data.utils.getServerBaseUrl() + "webapp/forgetPassword/getCode",
          type:'json',
          body: {phone: data.getPasswordData.phone}
        }, function(response) {
          if(response.data) {
            modal.toast({'message': '验证码正在发送', 'duration': 2});
            //短信返回的token存到提交数组里面
            data.getPasswordData.codeToken = response.data.codeToken;
            data.codestate=1;
            timenum=60;
          }
        },function(response){

        });
      }
    }
  };
</script>

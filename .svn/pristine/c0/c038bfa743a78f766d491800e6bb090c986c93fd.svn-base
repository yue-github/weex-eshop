        			this.$openURL(this.utils.getAppBaseUrl(this) + 'editAddress.js?addressId=' + v + '&type=1'+'&addr='+this.inAddr);
        		}
        	}else{
        		this.$openURL(this.utils.getAppBaseUrl(this) + 'editAddress.js?addressId=' + v);
        	}
        	
    	},
    	addAddress: function (e) {

        		if(this.productId) {
        			this.$openURL(this.utils.getAppBaseUrl(this) + 'editAddress.js?type=1' + '&productId=' + this.productId + '&priceId=' + this.priceId + '&amount=' + this.amount+'&addr='+this.inAddr);
        		}else{
